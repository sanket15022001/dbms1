    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">SrNo</th>
          <th scope="col">FlightID</th>
          <th scope="col">Source</th>
          <th scope="col">Destination</th>
          <th scope="col">Date</th>
          <th scope="col"> Time</th>
          <th scope="col"> Price</th>
          <th scope="col">Seats available</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        
        
           <% var index=1;%>
          <%  flights.forEach(function(flight){   %>
            <form action="/showbooking/<%=flight.flightID%>" method="get">
  
            
            <div id="<%-flight.flightID%>">
  
            
            <tr>
              <th scope="row"><%=index%> </th>
            <td><%= flight.flightID%> </td>
              <td><%= flight.source %></td>
              <td><%= flight.destination %></td>
              <td><%= flight.date %></td>
              <td><%= flight.time %></td>
              <td><%= flight.price %></td>
              <td><%= flight.remainingSeats %></td>
             <% var i =0;%>
              <td><button class="btn btn-primary">Show bookings</button></td>
             <% add=0 %>
             <% index++ %>
            </tr>
          </div>
        </form>
              <%})%>
       
      </tbody>
    </table>



    <div class="container rounded bg-white mt-5 mb-5">
        <form action="/admin" method="post">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="img/Airplane.jpg"></span>SkyLine<span> </span></div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Admin Settings</h4>
                    </div>
                    
                    <div class="row mt-3">
                       
                        <div class="col-md-12"><label  class="labels">FlightID</label><input name="flightID" type="text" class="form-control" placeholder="enter flight id" value=""></div>
                        <div class="col-md-12"><label  class="labels">Source</label><input name="source" type="text" class="form-control" placeholder="enter source" value=""></div>
                        <div class="col-md-12"><label  class="labels">Destination</label><input name="destination" type="text" class="form-control" placeholder="enter destination" value=""></div>
                        <div class="col-md-12"><label  class="labels">Date</label><input name="date" type="text" class="form-control" placeholder="enter date" value=""></div>
                        <div class="col-md-12"><label  class="labels">Time</label><input name="time" type="text" class="form-control" placeholder="enter time" value=""></div>
                        <div class="col-md-12"><label  class="labels">Duration</label><input name="duration" type="text" class="form-control" placeholder="enter duration" value=""></div>
                        <div class="col-md-12"><label  class="labels">Price</label><input name="price" type="text" class="form-control" placeholder="enter price" value=""></div>
                        <div class="col-md-12"><label  class="labels">No of seats</label><input name="seats" type="text" class="form-control" placeholder="enter no of seats" value=""></div>
                        
                    </div>
                    <div class="mt-5 text-center"><button  class="btn btn-primary profile-button" type="submit">Add Flight</button></div>
                   
                </div>
            </div>
            
        </div>
